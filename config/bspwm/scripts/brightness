#!/usr/bin/env bash
# Author: g3k

ICON_PATH="$HOME/.config/bspwm/scripts/images/brightness.png"
STEP=5
LIMIT=2
NOTIFY_ID=5555

# Obtener nivel de brillo actual
get_level() {
    brightnessctl info | awk -F '[()%]' '/Current brightness/ { print $2 }'
}

# Mostrar notificación con ícono y texto simple
notify_level() {
    local level="$1"
    dunstify \
        -r "$NOTIFY_ID" \
        -u low \
        -t 1500 \
        -h string:x-dunst-stack-tag:brightness \
        -i "$ICON_PATH" \
        "Brillo: ${level}%"
}

# Cambiar el brillo (up/down)
change_level() {
    local level
    level=$(get_level)

    if [ -z "$level" ]; then
        echo "Error: No se pudo obtener el brillo actual."
        exit 1
    fi

    case "$1" in
        up)
            if [ "$level" -lt "$LIMIT" ]; then
                brightnessctl set "${STEP}%" -q
            else
                brightnessctl set "${STEP}%+" -q
            fi
            ;;
        down)
            if [ "$level" -le $((LIMIT + STEP)) ]; then
                brightnessctl set "${LIMIT}%" -q
            else
                brightnessctl set "${STEP}%-" -q
            fi
            ;;
        *)
            echo "Uso: $0 {up|down}"
            exit 1
            ;;
    esac

    notify_level "$(get_level)"
}

change_level "$1"
